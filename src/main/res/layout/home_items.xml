<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:padding="@dimen/_8sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <ImageView
         android:layout_width="@dimen/_25sdp"
         android:background="@drawable/expenditures"
         android:layout_marginRight="@dimen/_12sdp"
         android:id="@+id/img_home_items"
         android:layout_gravity="center_vertical"
         android:layout_height="@dimen/_25sdp"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_50sdp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="@dimen/_30sdp"
              android:text="عنوتن"
              android:layout_marginRight="@dimen/_12sdp"
              android:fontFamily="@font/kalameh_bold"
              android:textColor="#000"
              android:id="@+id/titlehome"
              android:textSize="14sp"
              android:layout_centerVertical="true"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="عنوتنdsfds"
              android:layout_marginRight="@dimen/_12sdp"
              android:fontFamily="@font/kalameh_bold"
              android:textColor="#000"
              android:id="@+id/deshome"
              android:textSize="11sp"
              android:maxLength="25"
              android:ellipsize="end"
              android:layout_alignBottom="@id/titlehome"
              android:layout_centerVertical="true"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2000/2/2/2"
              android:fontFamily="@font/kalameh_regular"
              android:textSize="10sp"
              android:id="@+id/txtdate"
              android:textColor="#303030"
              android:layout_alignParentBottom="true"
              android:layout_alignParentLeft="true"
              android:layout_marginTop="@dimen/_22sdp"/>
          <LinearLayout
              android:layout_width="@dimen/_27sdp"
              android:padding="@dimen/_5sdp"
              android:id="@+id/more_home"
              android:background="@drawable/expenditures"
              android:orientation="horizontal"
              android:gravity="center"
              android:layout_height="@dimen/_18sdp"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true">
              <ImageView
                  android:layout_width="@dimen/_3sdp"
                  android:layout_height="@dimen/_3sdp"
                  android:background="@drawable/radius"/>
              <ImageView
                  android:layout_marginLeft="@dimen/_2sdp"
                  android:layout_marginRight="@dimen/_2sdp"
                  android:layout_width="@dimen/_3sdp"
                  android:layout_height="@dimen/_3sdp"
                  android:background="@drawable/radius"/>
              <ImageView
                  android:layout_width="@dimen/_3sdp"
                  android:layout_height="@dimen/_3sdp"
                  android:background="@drawable/radius"/>
          </LinearLayout>
      </RelativeLayout>
</LinearLayout>